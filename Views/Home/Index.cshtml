@model GameViewModel
@{
    ViewBag.Title = "Tic Tac Toe";
}

@if (Model.IsGameOver)
            {
                <a asp-action="Index"><strong>New Game</strong></a>
}
else
            {
                <h2 class="mt-2">@Model.WhoseTurn.PlayerTurn's turn</h2>
            }

<form asp-action="Index" method="post">
    <input type="hidden" asp-for="WhoseTurn.PlayerTurn" />

    <div class="board">
        @foreach(Square square in Model.Squares)
            {
                @if(square.IsEmpty)
                {
                    <button type="submit" name="WhoseTurn.SquareId" value="@square.SquareId" class="btn btn-outline-dark">
                        &nbsp;
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-dark" disabled>@square.PlayerTurn</button>
                }

                @if(square.IsRightSquare)
                {
                    <br />
                }
            }
    </div>
</form>